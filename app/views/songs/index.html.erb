<%= link_to "Upload more songs", music_index_path %>


<h1>Listing Songs</h1>
 
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Phone number</th>
      <th>Song</th>
      <th colspan="3"></th>
    </tr>
  </thead>
 
  <tbody>
  	<% @songs = current_user.songs unless @songs.present? %>
    <% @songs.each do |song| %>
      <tr>
      	<td><%= song.name %></td>
	    <td><%= song.age %></td>
	    <td><%= song.phone_number %></td>
	    <td><button><%= link_to "Play Song", song.song_file %></button></td>     
      </tr>
    <% end %>
  </tbody>
</table>